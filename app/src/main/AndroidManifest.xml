<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.developer.gavinejoyce.sastranest">

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/img"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="SASTRA NEST"
            android:theme="@style/AppTheme.NoActionBar"
            android:uiOptions="splitActionBarWhenNarrow">
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".PWI"
            android:configChanges="orientation|screenSize"
            android:label="Parent Web Interface"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".About"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Toolkit"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_toolkit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".News"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_news"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Splash"
            android:configChanges="orientation|screenSize"
            android:label="SASTRA NEST"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".Calender"
            android:configChanges="orientation|screenSize"
            android:label="Web Archives"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Feedback"
            android:configChanges="orientation|screenSize"
            android:label="FeedBack"
            android:theme="@style/AppTheme.NoActionBar" />


        <activity
            android:name=".changelog"
            android:label="ChangeLog"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar"/>

    </application>

</manifest>
